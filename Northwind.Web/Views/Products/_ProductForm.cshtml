@model Northwind.Web.Models.ProductModel

<form asp-action="@ViewData["FormAction"]" method="post">
    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
    @if (Model.Product.ProductId != 0)
    {
        <input type="hidden" asp-for="Product.ProductId" />
    }
    <div class="columns">
        <div class="column">
            <div class="field">
                <label asp-for="Product.ProductName" class="label">Product Name</label>
                <div class="control">
                    <input asp-for="Product.ProductName" class="input" placeholder="Enter product name" />
                    <span asp-validation-for="Product.ProductName" class="help is-danger"></span>
                </div>
            </div>
            <div class="field">
                <label asp-for="Product.SupplierId" class="label">Supplier</label>
                <div class="control">
                    <select asp-for="Product.SupplierId" asp-items="@(new SelectList(Model.Suppliers, "SupplierId", "CompanyName"))" class="input">
                        <option value="">Select Supplier</option>
                    </select>
                    <span asp-validation-for="Product.SupplierId" class="help is-danger"></span>
                </div>
            </div>
            <div class="field">
                <label asp-for="Product.CategoryId" class="label">Category</label>
                <div class="control">
                    <select asp-for="Product.CategoryId" asp-items="@(new SelectList(Model.Categories, "CategoryId", "CategoryName"))" class="input">
                        <option value="">Select Category</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="help is-danger"></span>
                </div>
            </div>
            <div class="field">
                <label asp-for="Product.QuantityPerUnit" class="label">Quantity Per Unit</label>
                <div class="control">
                    <input asp-for="Product.QuantityPerUnit" class="input" placeholder="Enter quantity per unit" />
                    <span asp-validation-for="Product.QuantityPerUnit" class="help is-danger"></span>
                </div>
            </div>
        </div>
        <div class="column">
            <div class="field">
                <label asp-for="Product.UnitPrice" class="label">Unit Price</label>
                <div class="control">
                    <input asp-for="Product.UnitPrice" class="input" type="number" step="0.01" placeholder="Enter unit price" />
                    <span asp-validation-for="Product.UnitPrice" class="help is-danger"></span>
                </div>
            </div>
            <div class="field">
                <label asp-for="Product.UnitsInStock" class="label">Units In Stock</label>
                <div class="control">
                    <input asp-for="Product.UnitsInStock" class="input" type="number" placeholder="Enter units in stock" />
                    <span asp-validation-for="Product.UnitsInStock" class="help is-danger"></span>
                </div>
            </div>
            <div class="field">
                <label asp-for="Product.UnitsOnOrder" class="label">Units On Order</label>
                <div class="control">
                    <input asp-for="Product.UnitsOnOrder" class="input" type="number" placeholder="Enter units on order" />
                    <span asp-validation-for="Product.UnitsOnOrder" class="help is-danger"></span>
                </div>
            </div>
            <div class="field">
                <label asp-for="Product.ReorderLevel" class="label">Reorder Level</label>
                <div class="control">
                    <input asp-for="Product.ReorderLevel" class="input" type="number" placeholder="Enter reorder level" />
                    <span asp-validation-for="Product.ReorderLevel" class="help is-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="field">
        <label asp-for="Product.Discontinued" class="checkbox">
            <input asp-for="Product.Discontinued" type="checkbox" />
            Discontinued
        </label>
    </div>

    <div class="field buttons">
        <div class="control">
            <button type="submit" class="card-button">@ViewData["ButtonText"]</button>
        </div>
        <div class="control" style="margin-left: auto;">
            <a href="@Url.Action("Index", "Products")" class="card-button cancel-button">Cancel</a>
        </div>
    </div>
</form>
